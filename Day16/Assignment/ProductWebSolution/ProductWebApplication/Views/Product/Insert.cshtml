@model ProductWebApplication.Models.Product

@{
    ViewData["Title"] = "Insert New";
}


<div class="m-5" style="width: fit-content;">
    <h1>Insert New Product</h1>

    <form action="Insert" method="post">
        <div class="mt-3 form-outline">
            <label for="pid" class="form-label">Product ID</label>
            <input type="number" class="form-control" name="pid">
        </div>

        <div class="mt-3 form-outline">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name">
        </div>

        <div class="mt-3 form-outline">
            <label for="price" class="form-label">Price</label>
            <input type="number" step="0.01" class="form-control" name="price">
        </div>

        <div class="mt-3 form-outline">
            <label for="sid" class="form-label">Supplier ID</label>
            <input type="number" class="form-control" name="sid">
        </div>

        <div class="mt-3 form-outline">
            <label for="qty" class="form-label">Quantity</label>
            <input type="number" class="form-control" name="qty">
        </div>

        <div class="mt-3 form-outline">
            <label for="remarks" class="form-label">Remarks</label>
            <input type="text" class="form-control" name="remarks">
        </div>

        <div class="mt-3">
            <button class="btn btn-success" type="submit">Insert</button>
            <button class="btn btn-danger" type="reset">Cancel</button>
        </div>
    </form>

</div>

